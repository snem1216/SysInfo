<Window x:Class="SysInfo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SysInfo"
        mc:Ignorable="d"
        Title="MainWindow" AllowsTransparency="True" WindowStyle="None" Background="{x:Null}" Width="151.5" ResizeMode="NoResize" ShowInTaskbar="False" SizeToContent="WidthAndHeight" Focusable="False" Loaded="Window_Loaded" StateChanged="Window_StateChanged">
    <Grid>
        <TextBlock x:Name="tb" TextWrapping="Wrap" Foreground="Red" FontWeight="Bold" FontFamily="Consolas">
            <TextBlock.Effect>
                <DropShadowEffect
                    ShadowDepth="2"
                  Direction="330"
                  Color="Black"
                  Opacity="0.9"
                 BlurRadius="2"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</Window>
